<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<el-resolver>
			org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>
		<locale-config>
			<default-locale>ru_RU</default-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>ru_RU</supported-locale>
		</locale-config>
	</application>
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>
	</application>

	<converter>
		<converter-for-class>
			ru.sstu.lims.core.domain.Position
		</converter-for-class>
		<converter-class>
			ru.sstu.lims.core.web.converters.PositionConverter
		</converter-class>
	</converter>

	<converter>
		<converter-for-class>
			ru.sstu.lims.core.domain.Employee
		</converter-for-class>
		<converter-class>
			ru.sstu.lims.core.web.converters.EmployeeConverter
		</converter-class>
	</converter>

	<!-- configuration of navigation rules -->	
	<navigation-rule>
		<navigation-case>
			<from-outcome>positionsList</from-outcome>
			<to-view-id>/pages/positionsList.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>positionInfo</from-outcome>
			<to-view-id>/pages/positionInfo.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>employeesList</from-outcome>
			<to-view-id>/pages/employeesList.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>employeeInfo</from-outcome>
			<to-view-id>/pages/employeeInfo.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>studiesList</from-outcome>
			<to-view-id>/pages/studiesList.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>studyInfo</from-outcome>
			<to-view-id>/pages/studyInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
